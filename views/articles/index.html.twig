{% extends 'layouts/app.html.twig' %}

{% block content %}
    <div class="container mx-auto px-4">
        <h1 class="text-4xl font-bold mb-6">Articles</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for article in articles %}
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <a href="/articles/{{ article.id }}" class="block text-2xl font-semibold text-blue-600 hover:underline">
                        {{ article.title }}
                    </a>
                    <p class="text-gray-700 mt-2">by {{ article.author }}</p>
                    <p class="mt-4 text-gray-600">{{ article.content|slice(0, 100) }}...</p>
                    <p class="text-sm text-gray-400 mt-2">Created at: {{ article.createdAt.format('Y-m-d') }}</p>
                    <a href="/articles/{{ article.id }}" class="text-blue-500 hover:text-blue-700">Read more</a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}